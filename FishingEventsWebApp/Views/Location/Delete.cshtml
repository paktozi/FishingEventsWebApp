 @model LocationDeleteModel

@{
    ViewBag.Title = "Delete";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card" style="background-color: rgba(10, 20, 0, 0.6);border-radius:10px;padding:8px;border-color:dimgrey;box-shadow:5px 5px 10px black; ">
            <div class="card-body">
                <h3 class="card-title text-center">@Model.Name</h3>            
                <p class="text-danger mt-3">Are you sure you want to delete @(Model.Name)?</p>
            </div>
            <div class="card-footer">
                <form asp-action="DeleteConfirmed" method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">Confirm Delete</button>
                    <a asp-action="All" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>