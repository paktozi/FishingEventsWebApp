 @model LocationEditModel
@{
    ViewBag.Title = "Edit Location";    
}

<h2 class="text-center">@ViewBag.Title</h2>

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label-add-edit">Location Name</label>
                <input asp-for="@Model.Name" class="form-control input-field " aria-required="true"/>
                <span asp-validation-for="@Model.Name" class="text-custom-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Elevation" class="form-label-add-edit">Elevation in meters</label>
                <textarea asp-for="@Model.Elevation" class="form-control input-field " aria-required="true" rows="1"></textarea>
                <span asp-validation-for="@Model.Elevation" class="text-custom-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.FishingType" class="form-label-add-edit">Fishing Type</label>
                <input asp-for="@Model.FishingType" class="form-control input-field " type="text" aria-required="true"/>
                <span asp-validation-for="@Model.FishingType" class="text-custom-danger"></span>
            </div>
          
            <div class="mb-3">
                <label asp-for="@Model.LocationImageUrl" class="form-label-add-edit">Image Url</label>
                <textarea asp-for="@Model.LocationImageUrl" class="form-control input-field " aria-required="true" rows="1"></textarea>
                <span asp-validation-for="@Model.LocationImageUrl" class="text-custom-danger"></span>
            </div>
           
            <div class="mb-3">
                <input class="btn btn-success btn-dark-text mb-2 w-20 py-1  rounded" type="submit" value="Save" />
                <a asp-controller="Location" asp-action="All" class="btn btn-warning mb-2 w-20 p-1 ">Cancel</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


