@model ICollection< FishingLocationModel>


@{
    ViewData["Title"] = "Events Location";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
    @if (User.IsInRole("Admin"))
    {
    <a asp-controller="Location" asp-action="Add" class="btn btn-success"><i class="fas fa-plus"></i>Add New Location</a>       
    }
</div>
<hr />

<div class="row text-center">
    @foreach (var e in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card h-100 transparent-card">
                @if (!string.IsNullOrEmpty(e.LocationImageUrl))
                {
                    <img src="@e.LocationImageUrl" class="card-img-top" style="max-height: 150px; object-fit: contain;" alt="@e.Name">
                }
                else
                {
                    <img src="~/img/no-image.jpg" class="card-img-top" style="max-height: 150px; object-fit: contain;" alt="No Image Available">
                }
                <a asp-controller="Weather" asp-action="Index" asp-route-locationName="@e.Name" class="btn btn-info mb-2 w-50 p-1 fw-bold" style="margin:5px;margin-left:25%;">Show Weather</a>
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@e.Name</h5>
                    <p class="card-text">Elevation: @e.Elevation m</p>
                    <p class="card-text">Fishing Type: @e.FishingType</p>

                    @if (User.IsInRole("Admin"))
                    {                
                        <a asp-controller="Location" asp-action="Edit" asp-route-id="@e.Id" class="btn btn-warning mb-2 w-100 p-3 fw-bold">Edit</a>                    
                        <a asp-controller="Location" asp-action="Delete" asp-route-id="@e.Id" class="btn btn-danger w-100">Delete</a>
                    }
                </div>
            </div>
        </div>
    }
</div>  