 @model FishCaughtAddModel
@{
    ViewBag.Title = "Fish";
    var today = DateTime.Now.ToString("dd-MM-yyyy");
}

<h2 class="text-center">@ViewBag.Title</h2>

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Add" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="FishingEventId" />
            
            
            
            <div class="mb-3">
                <label asp-for="@Model.Weight" class="form-label-add-edit">Fish Weight in kg</label>
                <input asp-for="@Model.Weight" class="form-control input-field" aria-required="true"/>
                <span asp-validation-for="@Model.Weight" class="text-custom-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Length" class="form-label-add-edit">Fish Length in cm</label>
                <textarea asp-for="@Model.Length" class="form-control input-field" aria-required="true" rows="1"></textarea>
                <span asp-validation-for="@Model.Length" class="text-custom-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.DateCaught" class="form-label-add-edit">Date Caught</label>
                <input asp-for="@Model.DateCaught" class="form-control input-field" type="text" aria-required="true" placeholder="dd-MM-yyyy"/>
                <span asp-validation-for="@Model.DateCaught" class="text-custom-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.SpeciesId" class="form-label-add-edit">Select Fish</label>
                <select asp-for="@Model.SpeciesId" class="form-control input-field" aria-required="true" asp-items="@(new SelectList(Model.ListSpecies, "Id", "Name"))">
                    <option value="">Select Fish...</option>
                </select>
                <span asp-validation-for="@Model.SpeciesId" class="text-custom-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.CaughtImageUrl" class="form-label-add-edit">Caught image url</label>
                <input asp-for="@Model.CaughtImageUrl" class="form-control input-field" type="text" aria-required="true"/>
                <span asp-validation-for="@Model.CaughtImageUrl" class="text-custom-danger"></span>
            </div>

                              
            <div class="mb-3">
                <input class="btn btn-success btn-dark-text mb-2 w-20 py-1 fw-bold rounded" type="submit" value="Save" />
                <a asp-controller="FishCaught" asp-action="All" class="btn btn-warning mb-2 w-20 p-1 fw-bold">Cancel</a>
            </div>         
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

