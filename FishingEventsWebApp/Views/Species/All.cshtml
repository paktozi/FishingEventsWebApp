@model ICollection< SpeciesAllModel>


@{
    ViewData["Title"] = "Species";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
    @if (User.IsInRole("Admin"))
    {
        <a asp-controller="Species" asp-action="Add" class="btn btn-success"><i class="fas fa-plus"></i>Add New Species</a>
    }
</div>
<hr />

<div class="row text-center">
    @foreach (var e in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card h-100 transparent-card">
                @if (!string.IsNullOrEmpty(e.FishImageUrl))
                {
                    <img src="@e.FishImageUrl" class="card-img-top" style="max-height: 150px; object-fit: contain;" alt="@e.Name">
                }
                else
                {
                    <img src="~/img/no-image.jpg" class="card-img-top" style="max-height: 150px; object-fit: contain;" alt="No Image Available">
                }
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@e.Name</h5>
                   <br />
                    <p class="card-text">Description: @e.Description</p>
                    
                    <p class="card-text">Habitat Name: @e.HabitatName</p>
                    <br />
                    <p class="card-text">Fish Bait: @e.FishBait</p>

                    @if (User.IsInRole("Admin")) //(User?.Identity?.IsAuthenticated == true)
                    {
                        <a asp-controller="Species" asp-action="Edit" asp-route-id="@e.Id" class="btn btn-warning mb-2 w-100 p-1 fw-bold">Edit</a>
                        <a asp-controller="Species" asp-action="Delete" asp-route-id="@e.Id" class="btn btn-danger mb-2 w-100 p-1 fw-bold">Delete</a>
                    }
                </div>
            </div>
        </div>
    }
</div>
