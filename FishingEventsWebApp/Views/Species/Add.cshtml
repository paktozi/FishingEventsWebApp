 @model SpeciesAddModel
@{
    ViewBag.Title = "Add Fish";
}

<h2 class="text-center">@ViewBag.Title</h2>


<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Add" method="post">
            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label-add-edit">Fish Name</label>
                <input asp-for="@Model.Name" class="form-control input-field " aria-required="true"/>
                <span asp-validation-for="@Model.Name" class="text-custom-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Description" class="form-label-add-edit">Description</label>
                <textarea asp-for="@Model.Description" class="form-control input-field " aria-required="true" rows="1"></textarea>
                <span asp-validation-for="@Model.Description" class="text-custom-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.HabitatName" class="form-label-add-edit">Fishing habitat</label>
                <textarea asp-for="@Model.HabitatName" class="form-control input-field " aria-required="true" rows="1"></textarea>
                <span asp-validation-for="@Model.HabitatName" class="text-custom-danger"></span>
            </div>


            <div class="mb-3">
                <label asp-for="@Model.FishBait" class="form-label-add-edit">Fish Bait</label>
                <textarea asp-for="@Model.FishBait" class="form-control input-field " aria-required="true" rows="1"></textarea>
                <span asp-validation-for="@Model.FishBait" class="text-custom-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.FishImageUrl" class="form-label-add-edit">Fish ImageUrl</label>
                <textarea asp-for="@Model.FishImageUrl" class="form-control input-field " aria-required="true" rows="1"></textarea>
                <span asp-validation-for="@Model.FishImageUrl" class="text-custom-danger"></span>
            </div>

            <div class="mb-3">
                <input class="btn btn-success btn-dark-text mb-2 w-20 py-1 fw-bold rounded" type="submit" value="Save" />
                <a asp-controller="Species" asp-action="All" class="btn btn-warning mb-2 w-20 p-1 fw-bold">Cancel</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


