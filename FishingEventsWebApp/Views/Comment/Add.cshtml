 @model CommentAddModel
@{
    ViewBag.Title = "Add comment";
    var today = DateTime.Now.ToString("dd-MM-yyyy");
}

<h2 class="text-center">@ViewBag.Title</h2>


<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Add" method="post">          
           @*  <input type="hidden" asp-for="id" /> *@
            @Html.AntiForgeryToken()
        
            <div class="mb-3">
                <label asp-for="@Model.CommentText" class="form-label-add-edit">Enter text</label>
                <textarea asp-for="@Model.CommentText" class="form-control input-field" aria-required="true" rows="5"></textarea>
                <span asp-validation-for="@Model.CommentText" class="text-custom-danger"></span>
            </div>

            <div class="mb-3">
                <input class="btn btn-success btn-dark-text mb-2 w-20 py-1  rounded" type="submit" value="Save" />
                <a asp-controller="FishingEvent" asp-action="All" class="btn btn-warning mb-2 w-20 p-1 ">Cancel</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}