 @model ICollection<CommentAllModel>

<h2 class="text-center">All Comments</h2>

<br />

<div class="text-start">
    <a asp-controller="Comment" asp-action="Add" asp-route-id="@int.Parse( TempData["eventId"].ToString())" class="btn btn-info  w-20 p-1">Add New Comment</a>
</div>

<br />

@if (!Model.Any())
{
    <h3>Not comments added yet</h3>
}
else
{
    <div class="flex-row">
        @foreach (var c in Model.OrderByDescending(c => c.CreatedOn))
        {
            <div>
                <div class="card h-50 transparent-card" style="margin:10px">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title ">Author: @c.AuthorName</h5>
                        <p class="text-custom-color">@c.CommentText</p>
                        <p class="card-text">Created: @c.CreatedOn</p>
                        @if (c.IsAuthor || User.IsInRole("Admin") || User.IsInRole("GlobalAdmin"))
                        {
                            <div class="d-flex justify-content-start align-items-start gap-2">
                                <a asp-controller="Comment" asp-action="Edit" asp-route-commentId="@c.Id" asp-route-eventId="@c.FishingEventId" asp-route-authorId="@c.AuthorId" class="btn btn-warning w-20 p-1">Edit</a>
                                <a asp-controller="Comment" asp-action="Delete" asp-route-commentId="@c.Id" asp-route-eventId="@c.FishingEventId" class="btn btn-danger w-20 p-1">Delete</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}
<div>
    <button type="button" class="btn btn-warning btn-dark-text mb-2 w-20 py-1 fw-bold rounded" onclick="history.back()">Back</button>
</div>

