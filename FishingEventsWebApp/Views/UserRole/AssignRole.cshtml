@model AssignRoleViewModel

@{
    ViewData["Title"] = "Assign Role";
}

<h2>Assign Role</h2>

<form asp-action="AssignRole" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label for="UserId">Select User</label>
        <select asp-for="UserId" class="form-control input-field" style=" width:30%" asp-items="@(new SelectList(Model.Users, "Id", "UserName"))">
            <option value="">-- Select User --</option>
        </select>
    </div>

    <div class="form-group">
        <label for="SelectedRole">Select Role</label>
        <select asp-for="SelectedRole" class="form-control input-field"style="width:30%">
            <option value="">-- Select Role --</option>
            @foreach (var role in Model.Roles)
            {
                <option value="@role.Value">@role.Text</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-success py-1" style="margin-top:5px">Assign Role</button>
</form>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success mt-3 input-field" style="width:50%">
        @TempData["SuccessMessage"]
    </div>
}
