@* @model FishingEventAddModel
@{
    ViewBag.Title = "Fishing Event";
    var today = DateTime.Now.ToString("dd-MM-yyyy");
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Add" method="post">
            <div class="mb-3">
                <label asp-for="@Model.EventName" class="form-label-add-edit">Event Name</label>
                <input asp-for="@Model.EventName" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.EventName" class="text-danger"></span>
            </div>          
            <div class="mb-3">
                <label asp-for="@Model.Description" class="form-label-add-edit">Description</label>
                <textarea asp-for="@Model.Description" class="form-control" aria-required="true" rows="5"></textarea>
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>
           
            <div class="mb-3">
                <label asp-for="@Model.StartDate" class="form-label-add-edit">Start Date</label>
                <input asp-for="@Model.StartDate" class="form-control" type="text" aria-required="true" placeholder="dd-MM-yyyy" />
                <span asp-validation-for="@Model.StartDate" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.EndDate" class="form-label-add-edit">End Date</label>
                <input asp-for="@Model.EndDate" class="form-control" type="text" aria-required="true" placeholder="dd-MM-yyyy" />
                <span asp-validation-for="@Model.EndDate" class="text-danger"></span>
            </div>


            <div class="mb-3">
                <label asp-for="@Model.LocationId" class="form-label-add-edit">Select Location</label>
                <select asp-for="@Model.LocationId" class="form-control" aria-required="true" asp-items="@(new SelectList(Model.Locations, "Id", "Name","Altitude","FishingType"))">
                    <option value="">Select Genre...</option>
                </select>
                <span asp-validation-for="@Model.LocationId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-success btn-dark-text mb-2 w-100 py-3 fw-bold rounded" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

 *@