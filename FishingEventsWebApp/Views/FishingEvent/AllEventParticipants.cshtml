@model ICollection< FishingEventAllParticipants>


@{
    ViewData["Title"] = "All Participants";
}
    <h2>@ViewData["Title"]</h2>

<hr />

<div class="row text-center">
    @foreach (var e in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card h-100" style="width: 100%;background-color: rgba(10, 20, 0, 0.6);border-radius:10px;padding:8px;border-color:dimgrey; box-shadow:5px 5px 10px black; ">                    
                <div class="card-body d-flex flex-column">
                    <p class="card-text" style="color:greenyellow">First Name: @e.FirstName</p>
                    <p class="card-text" style="color:greenyellow">Last Name: @e.LastName</p>
                     
                      <hr />
                    @foreach(var f in e.FishCaughtsList)
                    {
                        <p class="card-text">Fish Name: @f.Species</p>
                        <p class="card-text">Fish Weight: @f.Weight kg</p>
                        <p class="card-text">Fish Length: @f.Length cm</p>    
                        <hr />
                    }                                   
                      
                    @if (true @* ToDO Add Admin *@)
                    {
                    <a asp-controller="FishCaught" asp-action="Add" asp-route-userId="@e.UserId" asp-route-id="@e.EventId" class="btn btn-warning mb-2 w-100 p-3 fw-bold"> Add fish caught </a>                      
                    }
                </div>
            </div>
        </div>
    }

   
</div>  