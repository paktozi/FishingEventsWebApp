@model ICollection< FishingEventAllParticipants>


@{
    ViewData["Title"] = "All Participants:";
    var currentUserId = ViewData["CurrentUserId"].ToString();
}
<h2>@ViewData["Title"]</h2>

@if (Model.Any())
{
    <div class="row text-center">
        @foreach (var e in Model)
        {   
            <div class="col-md-3 mb-4">
                <div class="card h-100 transparent-card">
                    <div class="card-body d-flex flex-column">
                        <p class="card-text" style="color:greenyellow">First Name: @e.FirstName</p>
                        <p class="card-text" style="color:greenyellow">Last Name: @e.LastName</p>

                        <hr />
                        @foreach (var f in e.FishCaughtsList)
                        {                          
                            <p class="card-text">Fish Name: @f.Species</p>
                            <p class="card-text">Fish Weight: @f.Weight kg</p>
                            <p class="card-text">Fish Length: @f.Length cm</p>
                            @if ((User.IsInRole("Admin") || User.IsInRole("GlobalAdmin")) && currentUserId != e.UserId)
                            {
                                <a asp-controller="FishCaught" asp-action="Edit" asp-route-userId="@e.UserId" asp-route-eventId="@e.EventId" asp-route-id="@f.Id" class="btn btn-warning mb-2 w-100 p-1 fw-bold "> Edit fish caught </a>
                                <a asp-controller="FishCaught" asp-action="Delete" asp-route-eventId="@e.EventId" asp-route-id="@f.Id" class="btn btn-danger mb-2 w-100 p-1"> Delete fish caught </a>
                            }
                            <hr />
                        }

                        <hr />
                        @if ((User.IsInRole("Admin") || User.IsInRole("GlobalAdmin")) && currentUserId != e.UserId)
                        {
                            <a asp-controller="FishCaught" asp-action="Add" asp-route-userId="@e.UserId" asp-route-id="@e.EventId" class="btn btn-success mb-2 w-100 p-1"> Add fish caught </a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <h2 class="text-custom-color">No participants added yet.</h2>
}
<div>
    <button type="button" class="btn btn-warning btn-dark-text mb-2 w-20 py-1 fw-bold rounded" onclick="history.back()">Back</button>
</div>
