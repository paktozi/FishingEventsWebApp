<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FishingEventsWebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FishingEventsWebApp.styles.css" asp-append-version="true" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Concert+One&family=Love+Ya+Like+A+Sister&display=swap" rel="stylesheet">

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-opacity-50 border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="~/img/Icons/menu.png" class="icon-black">   Menu...
                        </button>
                        <ul class="dropdown-menu">
                            <li> <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/img/Icons/home.png" class="icon-black"> Home</a></li>
                            <li> <a class="nav-link text-white" asp-area="" asp-controller="FishingEvent" asp-action="All"><img src="~/img/Icons/h.png" class="icon-black"> All Events</a></li>
                            <li> <a class="nav-link text-white" asp-area="" asp-controller="FishingEvent" asp-action="Add"><img src="~/img/Icons/addevent.png" class="icon-black"> Add Event</a></li>
                            <li> <a class="nav-link text-white" asp-area="" asp-controller="Location" asp-action="All"><img src="~/img/Icons/location1.png" class="icon-black"> All Locations</a></li>
                            <li> <a class="nav-link text-white" asp-area="" asp-controller="Species" asp-action="All"><img src="~/img/Icons/fish.png" class="icon-black"> All Species</a></li>
                            <li> <a class="nav-link text-white" asp-area="" asp-controller="ApplicationUser" asp-action="All"><img src="~/img/Icons/user.png" class="icon-black"> All Users</a></li>
                            <li> <a class="nav-link text-white" asp-area="" asp-controller="LeaderBoard" asp-action="GeneralLeaderBoard"><img src="~/img/Icons/leader.png" class="icon-black"> General LeaderBoard</a></li>
                            @if (User.IsInRole(GlobalAdminRole))
                            {
                                <li><a class="nav-link text-white" asp-area="" asp-controller="UserRole" asp-action="Index"><img src="~/img/Icons/admin.png" class="icon-black"> Add/Remove Role to Users    </a></li>
                            }
                        </ul>
                    </div>

                    <partial name="_LoginPartial" />

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class=" footer">
        <div>
            &copy; @DateTime.Now.Year - FishingEventsWebApp <img src="~/img/Icons/shark64.png" />
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
