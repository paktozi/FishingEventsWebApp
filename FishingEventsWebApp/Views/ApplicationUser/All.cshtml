@model ICollection< ApplicationUserAllModel>


@{
    ViewData["Title"] = "All users";
}

<form asp-controller="ApplicationUser" asp-action="All" method="get" class="form-inline">
    <input type="text" name="userName" class="form-control mr-2 input-field" style="width:40%" placeholder="Enter User name" required />
    <button type="submit" class="btn custom-btn-green" style="margin:6px">Search User by Name</button>
</form>
<br />

<div class="row text-center">
    @foreach (var e in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card h-100 transparent-card">
                <div class="card-body d-flex flex-column">

                    <p class="card-text">First Name: @e.FirstName</p>
                    <p class="card-text">Last Name: @e.LastName</p>
                    <a asp-controller="ApplicationUser" asp-action="Details" asp-route-id="@e.Id" class="btn btn-warning mb-2 w-100 p-1 fw-bold">All fish</a>
                </div>
            </div>
        </div>
    }
</div>





