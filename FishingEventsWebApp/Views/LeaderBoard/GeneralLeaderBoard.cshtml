@model IEnumerable<LeaderBoardModel>

<h1>General Leaderboard</h1>
<table class="table">
    <thead class="transparent-table-head">
        <tr>
            <th>Position</th>
            <th>Name</th>
            <th>Total Fish Caught</th>
            <th>Total Weight</th>
        </tr>
    </thead>
    <tbody class="transparent-table-body ">
        @foreach (var (entry, index) in Model.Select((value, i) => (value, i + 1)))
        {
            <tr>
                <td>@index</td>
                <td>@entry.FirstName @entry.LastName</td>
                <td>@entry.TotalFishCaught</td>
                <td>@entry.TotalWeight kg</td>
            </tr>
        }
    </tbody>
</table>
