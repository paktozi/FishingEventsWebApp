@model IEnumerable<LeaderBoardModel>

<h1>Leaderboard</h1>
<table class="table">
    <thead style="background-color: rgba(10, 30, 0, 0.6);padding:8px;border-color:dimgrey;box-shadow:5px 5px 10px black;color:aquamarine;">
        <tr>
            <th>Position</th>
            <th>Name</th>
            <th>Total Fish Caught</th>
            <th>Total Weight</th>
        </tr>
    </thead>
    <tbody style="background-color: rgba(10, 20, 0, 0.6);padding:8px;border-color:dimgrey;box-shadow:5px 5px 10px black;color:greenyellow;">
        @foreach (var (entry, index) in Model.Select((value, i) => (value, i + 1)))
        {
            <tr>
                <td>@index</td>
                <td>@entry.FirstName @entry.LastName</td>
                <td>@entry.TotalFishCaught</td>
                <td>@entry.TotalWeight kg</td>
            </tr>
        }
    </tbody>
</table>
